PKGNAME=gcc-libstdcxx
PKGVER=13.1.0
DEPENDS=(glibc)

PREPARE() {
    rm -rf build && mkdir -p build
    pushd build
    ../libstdc++-v3/configure --host=$ARCH --prefix=/usr \
                              --disable-multilib --disable-nls \
                              --with-gxx-include-dir=/$ARCH/include/c++/13.1.0
    popd
}

BUILD() {
    pushd build
    make -j$J
    popd
}

INSTALL() {
    pushd build
    make DESTDIR=$PREFIX install -j$J
    popd
}